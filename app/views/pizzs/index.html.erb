<h1>Listing pizzs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Ingredients</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pizzs.each do |pizz| %>
  <tr>
    <td><%= pizz.name %></td>
    <td><%= pizz.price %></td>
    <td><%= pizz.ingredients.map(&:name).join(', ') %></td>
    <td><%= link_to 'Show', pizz %></td>
    <td><%= link_to 'Edit', edit_pizz_path(pizz) %></td>
    <td><%= link_to 'Destroy', pizz, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

